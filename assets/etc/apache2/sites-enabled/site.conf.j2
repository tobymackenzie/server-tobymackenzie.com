{#-# 2784 is to support original www port (see <https://worldwideweb.cern.ch/code/>) for main site #}
<VirtualHost *:80{% if item.value.sort is defined and item.value.sort == 0 %} *:2784{% endif %}>
	Include inc/{{item.key}}.conf
</VirtualHost>
{% if letsEncryptSiteStatus[item.key] is defined and letsEncryptSiteStatus[item.key] %}
<IfModule mod_ssl.c>
	<VirtualHost *:443>
		Include inc/{{item.key}}.conf
		SSLEngine on
		SSLCertificateFile /etc/letsencrypt/live/{{item.key}}/fullchain.pem
		SSLCertificateKeyFile /etc/letsencrypt/live/{{item.key}}/privkey.pem
	</VirtualHost>
</IfModule>
{% endif %}
